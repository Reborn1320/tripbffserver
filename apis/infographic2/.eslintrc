{
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:@typescript-eslint/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    //a whole discussion about prefix `I` or not
    // https://stackoverflow.com/questions/31876947/confused-about-the-interface-and-class-coding-guidelines-for-typescript/41967120#41967120
    "@typescript-eslint/interface-name-prefix": "off",
    "@typescript-eslint/camelcase": ["warn", { "properties": "never" }],
    "@typescript-eslint/no-var-requires": "warn",
    "@typescript-eslint/no-use-before-define": "warn",
    "@typescript-eslint/no-empty-function": "warn",
    "prefer-const": "warn",
    "@typescript-eslint/explicit-function-return-type": "off"
  }
}