{
  "name": "testnodeapi",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect=8001 dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "boom": "^7.3.0",
    "dotenv": "^6.1.0",
    "fs-extra": "^7.0.1",
    "hapi": "^17.6.0",
    "hapi-auth-bearer-token": "^6.1.0",
    "hapi-swagger": "^9.1.2",
    "inert": "^5.1.0",
    "joi": "^14.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "mongoose": "^5.3.9",
    "redis": "^2.8.0",
    "rsmq": "^0.9.3",
    "sharp": "^0.22.0",
    "uuid": "^3.3.2",
    "vision": "^5.4.0"
  },
  "devDependencies": {
    "@types/boom": "^7.2.1",
    "@types/fs-extra": "^5.0.4",
    "@types/hapi": "^17.6.3",
    "@types/inert": "^5.1.2",
    "@types/lodash": "^4.14.118",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.3.1",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.4",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.1.6"
  }
}
