{
  "name": "testnodeapi",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run copy && npm run lint",
    "serve": "node dist/index.js",
    "copy:data": "cp -r src/trip.module/_appData/ dist/trip.module/_appData/",
    "copy": "npm run copy:data",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint-full": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint": "tsc --noEmit && eslint src/**/*.{ts,js} --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect=8001 dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "test": "jest",
    "watch-test": "jest --watch",
    "prettier": "prettier --write src/**/*.{ts,js}",
    "pre-commit": "npm run lint & npm run prettier"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.463.0",
    "dotenv": "^6.1.0",
    "inert": "^5.1.0",
    "@hapi/hapi": "18.4.0",
    "hapi-auth-bearer-token": "^6.1.0",
    "hapi-swagger": "^11.1.0",
    "@hapi/joi": "^17.1.0",
    "@hapi/joi-date": "^2.0.1",
    "@hapi/boom": "7.4.11",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.25",
    "mongoose": "^5.3.9",
    "passport-facebook": "^3.0.0",
    "redis": "^2.8.0",
    "rsmq": "^0.9.3",
    "sharp": "^0.23.0",
    "uuid": "^3.3.2",
    "vision": "^5.4.0",
    "prom-client": "11.5.3",
    "@promster/hapi": "^3.2.0"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^19.0.1",
    "@types/inert": "^5.1.2",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.118",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.12",
    "@types/mongoose": "^5.3.1",
    "@types/sharp": "^0.22.1",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "jest": "^24.7.1",
    "mongodb-memory-server": "^5.0.2",
    "nodemon": "^1.18.4",
    "eslint": "6.8.0",
    "typescript": "^3.1.6",
    "@typescript-eslint/parser":"2.13.0",
    "@typescript-eslint/eslint-plugin": "2.13.0",
    "prettier": "2.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "snapshotResolver": "<rootDir>/customSnapshotResolver.js"
  }
}
